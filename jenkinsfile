
pipeline { 
    agent any
    tools { 
        maven 'maven3' 
        jdk 'jdk1.8.0_151.jdk' 
    }
    stages { 
       stage ('Initialize') {
            emailext body: '', subject: 'starting jenkins', to: 'enourhira@gmail.com'
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }
        stage('Build') { 
              steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
        stage('Test') { 
              steps {
                sh 'mvn  test' 
            }
              post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
        stage('Couverture de Test'){
            steps{
                sh 'mvn clean cobertura:cobertura -Pjenkins'
            }
        }
        stage('generation de la documentation'){
            steps{
                sh 'mvn javadoc:javadoc'
            }
        }
         stage('empaqueter le projet'){
            steps{
                sh 'mvn clean package'
            }
        }
        


        
    }
}

